%h1 Listing Groups
.listing
  - if @groups.count > 0
    %table
      %tr
        %th= order_by_link :name
      - @groups.each do |group|
        %tr{:onclick => "window.location='#{group_path(group)}'"}
          %td= h "#{group.name} (#{group.rights.size} rights and #{group.users.size} users)"
    = will_paginate @groups
  - else
    No groups found.
  .actions
    = link_to 'New Group', new_group_path, :class => "fake_button"
  %div
